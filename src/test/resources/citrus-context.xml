<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:citrus-http="http://www.citrusframework.org/schema/http/config"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd

    http://www.citrusframework.org/schema/http/config http://www.citrusframework.org/schema/http/config/citrus-http-config.xsd">

    <!-- Test client -->
    <citrus-http:client id="restClient" request-url="http://localhost:8100"/>

    <!-- Navitia simulator -->
    <citrus-http:server id="navServer" port="8101"
                        auto-start="true" timeout="50000"/>

    <!-- Wikipedia simulator -->
    <citrus-http:server id="wpServer" port="8102"
                        auto-start="true" timeout="50000"/>

    <!-- Open Street Map simulator -->
    <citrus-http:server id="osmServer" port="8103"
                        auto-start="true" timeout="50000"/>
</beans>